<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uwxy.barcode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_barcode_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.uwxy.barcode.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="de.uwxy.barcode.ItextService" />

        <activity android:name="de.uwxy.barcode.ShowFirstActivity" />
        <activity android:name="de.uwxy.barcode.ShowPdfActivity"></activity>
    </application>

</manifest>